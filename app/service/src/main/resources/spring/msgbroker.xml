<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sofa="http://schema.alipay.com/sofa/schema/slite"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://schema.alipay.com/sofa/schema/slite http://schema.alipay.com/sofa/slite.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Declare a publisher bean with id "uniformEventPublisher" -->
    <sofa:publisher id="uniformEventPublisher" group="P_tutorial_tom">
        <sofa:channels>
            <sofa:channel value="TP_DEFAULT_UNIFORM_EVENT"/>
        </sofa:channels>
        <sofa:binding.msg_broker/>
    </sofa:publisher>

    <!-- Declare a subscriber bean with id "uniformEventSubscriber" -->
    <sofa:consumer id="uniformEventSubscriber" group="S_tutorial_tom">
        <sofa:listener ref="uniformEventMessageListener"/>
        <sofa:channels>
            <sofa:channel value="TP_DEFAULT_UNIFORM_EVENT">
                <sofa:event eventType="direct" eventCode="EC_TUTORIAL_TOM" persistence="false"/>
            </sofa:channel>
        </sofa:channels>
        <sofa:binding.msg_broker/>
    </sofa:consumer>
</beans>
